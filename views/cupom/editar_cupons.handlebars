<div class="m-1">
  <h2>Editar cupom</h2>
<hr />
<form action="/cupons/atualizar" method="POST">
<input type="hidden" name="id" value="{{cupom._id}}">
  <div class="form-group">
    <label for="nomeCupom">Nome*</label>
    <input type="text" 
    name="nomeCupom" 
    id="nomeCupom" 
    class="form-control" 
    value="{{cupom.nomeCupom}}"
    required 
    />
  </div>
  <div class="form-group">
    <label for="desconto">Valor*</label>
    <input
      type="number"
      name="desconto"
      id="desconto"
      class="form-control"
      step=".1"
      value="{{cupom.desconto}}"
      required
    />
  </div>
  <div class="form-group">
                <label for=" descricao">Descrição*</label>
                <textarea
                  name="descricao"
                  id="descricao"
                  class="form-control"
                  value="{{cupom.descricao}}"
                  required
                ></textarea>
              </div>
  <div class="form-group">
    <label for="validade">Validade*</label>
    <input
      type="text"
      name="validade"
      id="validade"
      class="form-control"
      value="{{cupom.validade}}"
      required
    />
  </div>
  <button class="btn btn-dark mt-2">Atualizar</button>
</form>
</div>
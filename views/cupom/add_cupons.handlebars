<div class="m-4">
  <div>
    <div class="d-flex justify-content-center ">
      <form action="/cupons/enviar" method="POST">
        <div class="card mb-3 shadow-lg p-3 mb-5 bg-body rounded" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col d-flex align-items-center">
              <img src="/img/cupomDourado.png" width="100%" class="img-fluid" alt="Cupom de desconto" />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <div class="d-flex justify-content-between">
                  <h5 class="card-title">
                    <div class="form-group">
                      <label for="nomeCupom">Nome*</label>
                      <input type="text" name="nomeCupom" id="name" class="form-control" required />
                    </div>
                  </h5>
                  <h5 class="card-title ps-3">
                    <div class="form-group">
                      <label for="desconto">Desconto*</label>
                      <input type="number" name="desconto" id="price" class="form-control" step=".1" required />
                    </div>
                  </h5>
                </div>
                <p class="card-text">
                <div class="form-group">
                  <label for=" descricao">Descrição*</label>
                  <textarea name="descricao" id="description" rows="10" class="form-control" required></textarea>
                </div>
                </p>
                <p class="card-text"><small class="text-muted">
                    <div class="form-group">
                      <label for="nomeCupom">Validade*</label>
                      <input type="text" name="validade" id="name" class="form-control" required />
                    </div>
                  </small></p>
              </div>
            </div>
          </div>
          <button class="btn btn-dark mt-2">Criar cupom</button>
        </div>
      </form>
    </div>
  </div>
</div>